########## CLIENT TO SERVER ##########


### GENERAL COMMUNICATION TCP


login		DataLogin
			- id
			- login
			(login on server)

create		DataEmpty
			(create new Game)

addMap		DataMap
			- mapName
			(adding a map to a party)

validParty	DataEmpty
			(valid the party)

join		DataLogin
			- id
			- partyOwnerLogin
			(join a party)

chooseSpaceCraft	DataSpaceCraft
					- id
					- SkinType
					(choose a spacecraft)

ready		DataEmpty
			(set ready flag of the player to true - the party can begin when minimum player have join and are ready)

notReady	DataEmpty
			(set ready flag of the player to false)

start		DataEmpty
			(start the party - only the owner)

stop		DataEmpty
			(stop the party - only the owner)

quit		DataEmpty
			(qui the party, and stop it if you are the owner)


### GAME COMMUNIACATION UDP


move		DataSynchro
			- id of player
			- x
			- y
			- pv
			- time
			- bulletSkin
			- MovementType
			- startTime
			(Move action)

shoot		DataShoot
			- id
			(Shoot action)

########## SERVER TO CLIENT ##########


### GENERAL COMMUNICATION TCP


loginOK		DataLogin
			- id
			- login
			(login ok)

createOK	DataEmpty

sendMaps	DataMap
			- mapName
			(sending all map name of the server)

sendMapsEnd	DataMap
			- mapName
			(sending last map name of the server)

addMapOK	DataEmpty
			(Adding map successfull)

validPartyOK DataEmpty
			(validing party successfull)

joinOK		DataEmpty
			(joining party successfull, sending party map list)


### BROADCAST GENERAL COMMUNICATION TCP


joinGame	DataLogin
			- id
			- login
			(login has join the party - sended only to concerned party members)

leftParty	DataLogin
			- id
			- login
			(login has left the party - sended only to concerned party members)

playerChooseSpaceCraft	DataSpaceCraft
						- id
						- skinType
						(login has choosed a new spaceCraft - sended only to concerned party members)

playerReady		DataLogin
				- id
				- login
				(login is ready - sended only to concerned party members)

playerNotReady		DataLogin
					- id
					- login
					(login is not ready - sended only to concerned party members)

partyStarting	DataEmpty
				(party is starting)

sendMapDesc		DataEntity
				- id
				- pv
				- x
				- y
				- type
				- skin
				- bulletSkin
				- movementType
				- spawnFrameNum
				- startTime
				(Sending Environment)

sendMapDescEnd	DataEntity
				- id
				- pv
				- x
				- y
				- type
				- skin
				- bulletSkin
				- movementType
				- spawnFrameNum
				- startTime
				(End of sending environment)

stop		DataEmpty
			(the party is done - when owner stop the party or when the server decide to stop it (Win - Loose))


### ERROR CODES TCP


loginAlreadyExists	DataEmpty
					(login already choosed by another player)

badLoginFormat		DataEmpty
					(bad login format)

loginKO		DataEmpty
			(wrong login or password - login failure)

createKO	DataEmpty
			(Creation of party unsuccessfull)

maxPlayerTooHigh	DataEmpty
					(maximum player set is too high)

unknownMap	DataMap
			- mapName
			(map unknown)

validPartyKO	DataEmpty
				(validing the party unsuccessfull)


### GAME COMMUNICATION UDP (sended only to concerned party members)

spawn		DataEntity
			- id
			- pv
			- x
			- y
			- type
			- skin
			- bulletSkin
			- movementType
			- spawnFrameNum
			- startTime

move		DataSynchro
			- id of
			- x
			- y
			- pv
			- time
			- bulletSkin
			- MovementType
			- startTime
			(move entity with id [id] at position x y)

synchro		DataSynchro
			- id of
			- x
			- y
			- pv
			- time
			- bulletSkin
			- MovementType
			- startTime

shoot		DataShoot
			- id

die			DataId
			- id
